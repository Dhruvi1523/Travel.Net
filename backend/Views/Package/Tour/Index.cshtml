@{
    ViewData["Title"] = "Holiday Packages";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


<!-- Tour Package Cards Section -->
<div class="container mt-5">
    <h2 class="mb-4">Popular Holiday Packages</h2>
    <div class="row">
        @foreach (var pkg in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", "Tour", new { id = pkg.Id })" style="text-decoration: none; color: inherit;">
                    <div class="card h-100 shadow-sm">
                        <img src="@pkg.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5>@pkg.Title</h5>
                            <p>Starting At ₹@pkg.Price Per Person</p>
                            <span class="text-warning">⭐ @pkg.DiscountLabel</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
