@model backend.Package.Models.TourPackage
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .hero-section {
    position: relative;
    background-image: url('@Model.ImageUrl');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 400px;
    border-radius: 12px;
    margin-bottom: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4));
    z-index: 1;
}

.hero-content {
    z-index: 2;
    color: white;
    text-shadow: 1px 1px 4px rgba(0,0,0,0.8);
}

    .hero-text h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
    }

    .explore-btn {
        border: 1px solid #fff;
        background-color: rgba(0, 0, 0, 0.4);
        padding: 8px 18px;
        color: #fff;
        border-radius: 25px;
        margin-top: 10px;
        text-decoration: none;
    }

    .highlight-box {
        background-color: #e8f4ff;
        border-left: 4px solid #0d6efd;
        padding: 10px;
        border-radius: 4px;
        font-size: 0.95rem;
        margin-bottom: 8px;
    }

    .highlight-box span {
        font-weight: 600;
        margin-left: 5px;
    }

    .day-box {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        background: #f9f9f9;
    }

    .day-header {
        font-weight: bold;
        font-size: 1.1rem;
        margin-bottom: 8px;
    }
</style>

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="text-center hero-text">
            <h1>@Model.Title</h1>
        </div>
    </div>

    <!-- Basic Info -->
    <div class="row mb-4">
        <div class="col-md-8">
            <p><strong>Route:</strong> @Model.Itinerary</p>
            <p><strong>Hotel:</strong> @Model.Hotel</p>
        </div>
        <div class="col-md-4 text-end">
            <h5 class="text-success fw-bold">‚Çπ@Model.Price</h5>
            <p class="text-muted"><del>‚Çπ@Model.OriginalPrice</del></p>
            <span class="badge bg-danger">@Model.DiscountLabel</span>
        </div>
    </div>

    <!-- Day Plan -->
    <h4 class="mb-3">Your Journey</h4>
    @foreach (var day in Model.DayPlan)
    {
        <div class="day-box">
            <div class="day-header text-primary">@day.Day</div>

            <div class="highlight-box">
                <span class="text-primary">üß≠ Activity:</span> @day.Activity
            </div>

            <div class="highlight-box">
                <span class="text-success">üç¥ Meal:</span> @day.Meal
            </div>

            @if (!string.IsNullOrEmpty(day.Transfer))
            {
                <div class="highlight-box">
                    <span class="text-warning">üöï Transfer:</span> @day.Transfer
                </div>
            }
        </div>
    }

    <!-- CTA -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Checkout", "Payment", new { id = Model.Id })" class="btn btn-lg btn-primary px-4">Proceed to Payment</a>
    </div>
</div>
