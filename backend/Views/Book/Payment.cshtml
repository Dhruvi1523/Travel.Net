@model backend.Models.FlightBookingModel
@{
    ViewData["Title"] = "Payment Page";
}

<style>
:root {
    /* Terra Cotta Color Palette */
    --primary: #DF6951;        /* Main Terra Cotta */
    --primary-100: #F9E2DD;   /* 10% opacity */
    --primary-200: #F2C5BB;   /* 20% opacity */
    --primary-300: #EBA799;   /* 30% opacity */
    --primary-400: #E58A77;   /* 60% opacity */
    --primary-600: #C85E47;   /* Darker shade */
    --primary-700: #B1533D;   /* Even darker */
    --primary-800: #9A4833;   /* For text */
    
    /* Neutrals */
    --white: #FFFFFF;
    --light-100: #FDF9F8;     /* Warm white */
    --light-200: #FAF3F2;     /* Slightly darker */
    --light-300: #F5EDEB;     /* Borders */
    --gray-400: #D7CECB;      /* Light gray */
    --gray-500: #A89B97;      /* Medium gray */
    --gray-600: #796A65;      /* Dark gray */
    --dark-700: #4A3D39;      /* Text */
    --dark-800: #2E2522;      /* Headings */
    --dark-900: #1A1210;      /* Dark backgrounds */
  
    /* UI Variables */
    --border-radius-sm: 6px;
    --border-radius-md: 12px;
    --border-radius-lg: 20px;
    --shadow-sm: 0 2px 8px rgba(46, 42, 40, 0.08);
    --shadow-md: 0 4px 16px rgba(46, 42, 40, 0.12);
    --shadow-lg: 0 8px 24px rgba(46, 42, 40, 0.16);
    --transition-fast: 0.15s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;
}

</style>

<div class="min-h-screen bg-[var(--light-100)] py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto bg-[var(--white)] rounded-[var(--border-radius-lg)] shadow-[var(--shadow-md)] overflow-hidden md:max-w-2xl transition-[var(--transition-normal)] hover:shadow-[var(--shadow-lg)]">
        <!-- Card Header -->
        <div class="bg-[var(--primary)] p-6">
            <h2 class="text-2xl font-bold text-[var(--white)]">Complete Your Flight Booking</h2>
            <p class="text-[var(--primary-100)] mt-1">Booking Reference: #@Model.Id</p>
        </div>

            
            <div class="mb-8">
                <h3 class="text-lg font-medium text-[var(--dark-800)] mb-4">Payment Information</h3>
                
                <!-- Card Number -->
                <div class="mb-6">
                    <label for="cardNumber" class="block text-sm font-medium text-[var(--dark-700)] mb-1">Card Number</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-[var(--gray-500)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                                <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input 
                            type="text" 
                            id="cardNumber" 
                            class="block w-full pl-10 pr-3 py-3 border border-[var(--light-300)] rounded-[var(--border-radius-sm)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-200)] focus:border-[var(--primary-400)] transition-[var(--transition-fast)]" 
                            placeholder="1234 5678 9012 3456" 
                            required />
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <!-- Expiry Date -->
                    <div class="mb-6">
                        <label for="expiry" class="block text-sm font-medium text-[var(--dark-700)] mb-1">Expiry Date</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-[var(--gray-500)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input 
                                type="month" 
                                id="expiry" 
                                class="block w-full pl-10 pr-3 py-3 border border-[var(--light-300)] rounded-[var(--border-radius-sm)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-200)] focus:border-[var(--primary-400)] transition-[var(--transition-fast)]" 
                                required />
                        </div>
                    </div>

                    <!-- CVV -->
                    <div class="mb-6">
                        <label for="cvv" class="block text-sm font-medium text-[var(--dark-700)] mb-1">CVV</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-[var(--gray-500)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input 
                                type="password" 
                                id="cvv" 
                                class="block w-full pl-10 pr-3 py-3 border border-[var(--light-300)] rounded-[var(--border-radius-sm)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-200)] focus:border-[var(--primary-400)] transition-[var(--transition-fast)]" 
                                required 
                                maxlength="3" 
                                placeholder="•••" />
                        </div>
                    </div>
                </div>
            </div>
            <form class="p-8" action="/api/book/confirm-booking" method="GET">
                <input type="hidden" name="bookingId" value="@Model.Id" />

                <div class="mt-6">
                    <button 
                        type="submit" 
                        class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-[var(--border-radius-md)] shadow-sm text-sm font-medium text-[var(--white)] bg-[var(--primary)] hover:bg-[var(--primary-600)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--primary-300)] transition-[var(--transition-normal)] hover:scale-[1.02)]">
                        Pay Now
                        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </form>



            <div class="mt-6 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[var(--primary-600)] mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-xs text-[var(--gray-600)]">Your payment is secure and encrypted</span>
            </div>
    </div>
</div>
